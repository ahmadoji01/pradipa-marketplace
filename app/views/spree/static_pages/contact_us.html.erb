<div class="section section-padding">
    <div class="container">
        <div class="section-title2 text-center">
            <% flash.each do |type, msg| %>
                <%= render partial: 'spree/shared/flash_message', locals: { message: msg, type: type } %>
            <% end %>
            <h2 class="title">Keep in touch with us</h2>
            <p>We would love to hear directly from you. So we can tailor your needs to our partners and make all of us happy by creating more great products! Contact us via the information below</p>
        </div>

        <div class="section section-padding pt-0" id="contact-form">
            <div class="container">

                <div class="section-title2 text-center">
                    <h2 class="title">Send us a message</h2>
                </div>

                <div class="row">
                    <div class="col-lg-8 col-12 mx-auto">
                        <div class="contact-form">
                            <%= form_for @ticket, url: main_app.submit_ticket_path, html: { method: :post } do |f| %>
                                <% user_id ||= "" 
                                user_id = spree_current_user.id if !spree_current_user.nil? %>
                                <%= f.hidden_field :user_id, value: user_id, required: true %>
                                <div class="row learts-mb-n30">
                                    <div class="col-md-6 col-12 learts-mb-30"><%= f.text_field :name, class: 'form-control', placeholder: 'Your Name *', required: true %></div>
                                    <div class="col-md-6 col-12 learts-mb-30"><%= f.text_field :email, class: 'form-control', placeholder: 'Email *', required: true %></div>
                                    <div class="col-12 learts-mb-30"><%= f.text_field :title, placeholder: 'Subject *', class: 'form-control', value: @subject, required: true %></div>
                                    <div class="col-12 learts-mb-30"><%= f.text_area :body, class: 'form-control', placeholder: 'Message', required: true, rows: 4 %></div>
                                </div>
                                <div class="col-12 text-center learts-mb-30"><button class="btn btn-dark btn-outline-hover-dark">Submit</button></div>
                            <% end %>
                            <p class="form-messege"></p>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="row learts-mb-n30">
            <div class="col-lg-4 col-md-6 col-12 learts-mb-30">
                <div class="contact-info">
                    <h4 class="title">ADDRESS</h4>
                    <span class="info"><i class="icon fal fa-map-marker-alt"></i> Jl. Raya Cibeber Cilaku No. 12, Kel. Sirnagalih, Kec. Cilaku, Kab. Cianjur, West Java, Indonesia</span>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-12 learts-mb-30">
                <div class="contact-info">
                    <h4 class="title">CONTACT</h4>
                    <span class="info"><i class="icon fal fa-phone-alt"></i> Mobile: (+62) – 812 – 8793 – 5234</span>
                    <span class="info"><i class="icon fal fa-envelope"></i> Mail: <a href="#">pradipamanager@gmail.com</a></span>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-12 learts-mb-30">
                <div class="contact-info">
                    <h4 class="title"> HOUR OF OPERATION</h4>
                    <span class="info"><i class="icon fal fa-clock"></i> Monday – Friday : 09:00 – 20:00 <br> Sunday & Saturday: 10:30 – 22:00</span>
                </div>
            </div>
        </div>

        <div class="row learts-mt-60">
            <div class="col">
                <iframe class="contact-map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3961.330419015199!2d107.1270864146375!3d-6.850938168926855!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e68523c8ad5b7cf%3A0x4f322385de9371f1!2s44XH%2BJP8%2C%20Sirnagalih%2C%20Cilaku%2C%20Cianjur%20Regency%2C%20West%20Java%2043285!5e0!3m2!1sen!2sid!4v1641283130579!5m2!1sen!2sid" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
            </div>
        </div>

    </div>
</div>