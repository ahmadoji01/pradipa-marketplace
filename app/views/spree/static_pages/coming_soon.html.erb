<div class="coming-soon-section section section-padding" data-bg-image="<%= image_url "for_use/bg/coming-soon-bg.jpg" %>">
    <div class="container">
        <div class="coming-soon-content">
            <div class="logo">
                <a href="/"><%= image_tag "logo/logo-2.png" %></a>
            </div>
            <h2 class="title">Coming soon</h2>
            <div class="countdown3" data-countdown="2022/02/01"></div>
            <div class="coming-soon-subscribe">
                <%= form_for @mailing, url: main_app.submit_mailing_path, html: { class: 'mc-form widget-subscibe', method: :post } do |f| %>
                    <%= f.text_field :email, class: 'bg-light', type: 'email', placeholder: 'Enter your e-mail address', required: true %>
                    <button id="mc-submit" class="btn btn-dark">subscribe</button>
                <% end %>
                <% flash.each do |type, msg| %>
                    <%= render partial: 'spree/shared/flash_message', locals: { message: msg, type: type } %>
                <% end %>
                
                <div class="mailchimp-alerts text-centre">
                    <div class="mailchimp-submitting"></div>
                    <div class="mailchimp-success text-success"></div>
                    <div class="mailchimp-error text-danger"></div>
                </div>
            </div>
        </div>
    </div>
</div>