<!-- Page Title/Header Start -->
<div class="page-title-section section" data-bg-image="<%= image_url 'bg/page-title-1.jpg' %>">
    <div class="container">
        <div class="row">
            <div class="col">

                <div class="page-title">
                    <h1 class="title">Blog</h1>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">Blog</li>
                    </ul>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- Page Title/Header End -->

<!-- Portfolio Section Start -->
<div class="section section-padding">
    <div class="container">
        <div class="row learts-mb-n50">

            <div class="col-xl-9 col-lg-8 col-12 learts-mb-50">
                <div class="row learts-mb-n40">
                    <% @blogs.each do |blog| %>
                        <%= render partial: 'spree/blogs/partials/grid', locals: { blog: blog } %>
                    <% end %>
                </div>

                <div class="row learts-mt-50">
                    <div class="col text-center">
                        <a href="#" class="btn btn-dark btn-outline-hover-dark">Load More</a>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-lg-4 col-12 learts-mb-10">
                <!-- Search Start -->
                <div class="single-widget learts-mb-40">
                    <div class="widget-search">
                        <form action="#">
                            <input type="text" placeholder="Search posts....">
                            <button><i class="fal fa-search"></i></button>
                        </form>
                    </div>
                </div>
                <!-- Search End -->

                <!-- Blog Post Widget Start -->
                <div class="single-widget learts-mb-40">
                    <h3 class="widget-title product-filter-widget-title">Recent Post</h3>
                    <ul class="widget-blogs">
                        <% @blogs.first(3).each do |blog| %>
                            <%= render partial: 'spree/blogs/partials/recent_post', locals: { blog: blog } %>
                        <% end %>
                    </ul>
                </div>
                <!-- Blog Post Widget End -->

                <!-- Categories Start -->
                <div class="single-widget learts-mb-40">
                    <div class="widget-banner">
                        <img src="assets/images/banner/widget-banner.jpg" alt="">
                    </div>
                </div>
                <!-- Categories End -->

                <!-- Categories Start -->
                <div class="single-widget learts-mb-40">
                    <h3 class="widget-title product-filter-widget-title">Categories</h3>
                    <ul class="widget-list">
                        <li><a href="#">Gift ideas</a> <span class="count">11</span></li>
                        <li><a href="#">Feature</a> <span class="count">2</span></li>
                        <li><a href="#">Kitchen</a> <span class="count">11</span></li>
                    </ul>
                </div>
                <!-- Categories End -->
            </div>
          <p id="notice"><%= notice %></p>
          <h1>Spree Blogs</h1>
          <table>
            <thead>
              <tr>
                <th>Title</th>
                <th>Body</th>
                <th>Meta title</th>
                <th>Meta keyword</th>
                <th>Subtitle</th>
                <th>Featured image</th>
                <th>Edited at</th>
                <th>Category</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @spree_blogs.each do |spree_blog| %>
                <tr>
                  <td><%= spree_blog.title %></td>
                  <td><%= spree_blog.body %></td>
                  <td><%= spree_blog.meta_title %></td>
                  <td><%= spree_blog.meta_keyword %></td>
                  <td><%= spree_blog.subtitle %></td>
                  <td><%= spree_blog.featured_image %></td>
                  <td><%= spree_blog.edited_at %></td>
                  <td><%= spree_blog.blog_category %></td>
                  <td><%= link_to 'Show', main_app.blog_path(spree_blog) %></td>
                  <td><%= link_to 'Edit', main_app.edit_blog_path(spree_blog) %></td>
                  <td><%= link_to 'Destroy', main_app.blog_path(spree_blog), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <br>
          <%= link_to 'New Spree Blog', main_app.new_blog_path %>
        </div>
    </div>

</div>
<!-- Portfolio Section End -->
