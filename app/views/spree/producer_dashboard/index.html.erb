<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="row">
            <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                <h3 class="font-weight-bold">Welcome!</h3>
                <h6 class="font-weight-normal mb-0">You have <span class="text-primary">3 incoming orders!</span></h6>
            </div>
        </div>
    </div>
</div>

<div class="row">
  <div class="col-md-12 mb-4">
    <%= render partial: 'spree/producer_dashboard/elements/shipping_requests_table', locals: { requests: @requests } %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 grid-margin stretch-card">
    <%= render partial: 'spree/producer_dashboard/elements/withdrawal_summary', locals: { home: true } %>
  </div>
  <div class="col-md-6 grid-margin stretch-card">
    <%= render partial: 'spree/producer_dashboard/elements/sales_report' %>
  </div>
</div>

<div class="row">
  <div class="col-md-12 grid-margin stretch-card">
    <%= render partial: 'spree/producer_dashboard/elements/withdrawals_table', locals: { wd_requests: @wd_requests, home: true } %>
  </div>
</div>

<div class="row">
  <div class="col-md-12 grid-margin stretch-card">
    <%= render partial: 'spree/producer_dashboard/elements/withdrawal_balances_table', locals: { wd_balances: @wd_balances, home: true } %>
  </div>
</div>