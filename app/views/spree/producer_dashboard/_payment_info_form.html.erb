<% info ||= Spree::Withdrawal.new
 %>

<div class="card m-2">
    <div class="card-body">
        <h4 class="card-title"><%= t('pd.payment_info_for_wd') %></h4>
        <p class="card-description">
            <%= t('pd.enter_bank_account_info_for_wd') %>
        </p>
        <%= form_for info, url: main_app.producer_dashboard_update_payment_info_path, html: { method: :put } do |f| %>
            <%= f.hidden_field :user_id, value: spree_current_user.id, required: true %>
            <div class="form-group">
                <label for="payment-full-name"><%= t('pd.full_name') %></label>
                <%= f.text_field :full_name, class: 'form-control', required: true %>
            </div>
            <div class="form-group">
                <label for="payment-bank-name"><%= t('pd.bank_name') %></label>
                <%= f.text_field :bank_name, class: 'form-control', required: true %>
            </div>
            <div class="form-group">
                <label for="payment-account-number"><%= t('pd.bank_account_number') %></label>
                <%= f.text_field :bank_number, class: 'form-control', required: true %>
            </div>
            <div class="form-group">
                <label for="payment-full-address"><%= t('pd.address') %></label>
                <%= f.text_field :address, class: 'form-control', required: true %>
            </div>
            <div class="form-group">
                <label for="payment-country"><%= t('pd.country') %></label>
                <%= f.text_field :bank_country, class: 'form-control', required: true %>
            </div>
            <button type="submit" class="btn btn-primary mr-2"><%= t('submit') %></button>
        <% end %>
    </div>
</div>