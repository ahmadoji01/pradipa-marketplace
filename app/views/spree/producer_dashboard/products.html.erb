<h3>Your Products</h3>
<div class="row mt-4">
    <div class="input-group mb-4">
        <%= search_form_for @q, url: main_app.producer_dashboard_products_page_path do |f| %>
            <li class="nav-item nav-search d-none d-lg-block">
                <div class="input-group">
                    <%= f.search_field :name_cont, class: 'form-control', placeholder: "Search product by name..." %>
                    <div class="input-group-prepend hover-cursor" id="navbar-search-icon">
                        <%= button_tag class: 'input-group-text', id: 'search', type: :submit do %>
                            <i class="icon-search"></i>
                        <% end %>
                    </div>
                </div>
            </li>
        <% end %>
    </div>
    <div class="col-md-12 grid-margin">
        <%= render partial: 'spree/producer_dashboard/elements/products_table', locals: { products: @products } %>
    </div>
    <%== pagy_bootstrap_nav(@pagy) %>
</div>