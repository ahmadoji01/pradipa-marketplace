<%= render partial: 'spree/sections/youtube_js_api_loader' %>
<%= render partial: 'spree/collections/youtube_video', locals: {video: @collection.featured_video, id: 'featured-video-yt-player'} %>

<div class="iframe-container">
    <div class="responsive-iframe swiper-slide">
        <div id="featured-video-player" class="iframe-video"></div>
    </div>
</div>

<%= render partial: 'spree/sections/parallax_info_right', locals: {bg: @collection.featured_image.url} %>

<div class="section section-padding">
    <div class="container">
        <div class="section-title2 text-center">
            <h2 class="title title-icon-both">Discover this Collection</h2>
            <div class="tab-content">
                <div class="tab-pane fade show active" id="product-all">
                    <div class="products row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-2">
                        <% @collection.products.take(4).each do |product| %>
                            <%= render partial: 'spree/elements/product_card', locals: { product: product } %>
                        <% end %>
                    </div>
                </div>
                <div class="d-flex justify-content-center learts-mt-50">
                    <a href="/products" class="btn btn-primary btn-hover-black">View All Products</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="iframe-container">
    <div class="responsive-iframe swiper-slide">
        <div id="production-video-player" class="iframe-video"></div>
    </div>
</div>

<%= render partial: 'spree/sections/parallax_info_left', locals: {bg: @collection.production_image.url}  %>

<%= render partial: 'spree/sections/parallax_info_right', locals: {bg: @collection.summary_image.url} %>