<%= render partial: 'spree/collections/youtube_video', locals: {video: @collection.featured_video, id: 'featured-video-yt-player'} %>
<div class="row">
    <div class="col-lg-6 col-sm-12 collection-info">
        <h1 style="text-align:center;flex-grow:1"><%= @collection.name %></h3>
        <div class="flex-breaker"></div>
        <p><%= @collection.collection_description %></p>
    </div>
    <div class="col-lg-6 col-sm-12">
        <div class="image">
            <%= image_tag @collection.featured_image.url, class: "collection-image" %>
        </div>
    </div>
</div>

<div class="section section-padding">
    <div class="container">
        <div class="section-title2 text-center">
            <h2 class="title title-icon-both">Discover this Collection</h2>
            <div class="tab-content">
                <div class="tab-pane fade show active" id="product-all">
                    <div class="products row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-2">
                        <% @collection.products.take(4).each do |product| %>
                            <%= render partial: 'spree/elements/product_card', locals: { product: product } %>
                        <% end %>
                    </div>
                </div>
                <div class="d-flex justify-content-center learts-mt-50">
                    <a href="/products" class="btn btn-primary btn-hover-black">View All Products</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6 col-sm-12">
        <div class="image">
            <%= image_tag @collection.production_image.url, class: "collection-image" %>
        </div>
    </div>
    <div class="col-lg-6 col-sm-12 collection-info">
        <p><%= @collection.production_description %></p>
    </div>
</div>
<%= render partial: 'spree/collections/youtube_video', locals: {video: @collection.production_video, id: 'production-video-yt-player'} %>

<div class="row">
    <div class="col-12">
        <div class="image">
            <%= image_tag @collection.production_image.url, class: "collection-image" %>
        </div>
    </div>
</div>