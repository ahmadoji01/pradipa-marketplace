<div class="mobile-header bg-white section d-xl-none border-bottom">
    <div class="container">
        <div class="row align-items-center">

            <div class="col">
                <div class="header-logo mobile-logo">
                    <a href="/"><%= image_tag "logo/logo-2.png" %></a>
                </div>
            </div>

            <div class="col-auto">
                <div class="header-tools justify-content-end">
                    <div class="header-login">
                        <a href="/account"><i class="fal fa-user"></i></a>
                    </div>
                    <div class="header-search">
                        <a href="#offcanvas-search" class="offcanvas-toggle" data-bs-toggle="offcanvas" aria-controls="offcanvas-search"><i class="fal fa-search"></i></a>
                    </div>
                    <div class="header-cart">
                        <% if current_order.nil? %>
                            <% num_of_items = 0 %>
                        <% else %>
                            <% num_of_items = current_order.line_items.count %>
                        <% end %>
                        <a href="#offcanvas-cart" class="offcanvas-toggle" data-bs-toggle="offcanvas" aria-controls="offcanvas-cart"><span class="cart-count"><%= num_of_items %></span><i class="fal fa-shopping-cart"></i></a>
                    </div>
                    <div class="mobile-menu-toggle">
                        <a href="#offcanvas-mobile-menu" class="offcanvas-toggle" data-bs-toggle="offcanvas" aria-controls="offcanvas-mobile-menu">
                            <svg viewBox="0 0 800 600">
                                <path d="M300,220 C300,220 520,220 540,220 C740,220 640,540 520,420 C440,340 300,200 300,200" id="top"></path>
                                <path d="M300,320 L540,320" id="middle"></path>
                                <path d="M300,210 C300,210 520,210 540,210 C740,210 640,530 520,410 C440,330 300,190 300,190" id="bottom" transform="translate(480, 320) scale(1, -1) translate(-480, -318) "></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>