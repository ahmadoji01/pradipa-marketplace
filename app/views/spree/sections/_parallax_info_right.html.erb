<% bg ||= 'banner/parallax/parallax-2.jpg' 
    description ||= ''
    title ||= ''
    link ||= ''
    isBtnShown ||= false %>

<div class="parallax-banner parallax-banner-2" data-scrollax-parent="true">
    <div class="parallax-image" data-scrollax="properties: { translateY: '30%' }">
        <img src="<%= image_url bg %>" alt="parallax-2" />
    </div>
    <div class="content text-center">
        <h2 class="title"><%= title %></h2>
        <p><%= description %></p>
        <% if isBtnShown %>
            <a href="<%= link %>" class="btn btn-light btn-hover-dark">Discover Collection</a>
        <% end %>
    </div>
</div>