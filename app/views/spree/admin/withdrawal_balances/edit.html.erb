<% admin_breadcrumb(link_to(plural_resource_name(Spree::WithdrawalBalance), main_app.admin_withdrawal_balances_path)) %>
<% admin_breadcrumb('Edit Withdrawal Balance') %>

<% content_for :page_actions do %>
  <li>
    <%= link_to 'New Withdrawal Balance', main_app.new_admin_withdrawal_balance_url, class: 'btn btn-primary' %>
  </li>
<% end %>

<%= form_for @balance, url: main_app.admin_withdrawal_balance_url, html: { method: :put } do |f| %>
  <fieldset class="no-border-top">
    <%= render 'edit_form', f: f %>
    <% if can? :update, @balance %>
      <%= render partial: 'spree/admin/shared/edit_resource_links', locals: {collection_url: main_app.admin_withdrawal_balances_path} %>
    <% end %>
  </fieldset>
<% end %>