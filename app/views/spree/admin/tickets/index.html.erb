<% admin_breadcrumb(link_to(plural_resource_name(Spree::Ticket), main_app.admin_tickets_path)) %>

<% content_for :page_actions do %>
  <li>
    <%= link_to 'New Ticket', main_app.new_admin_ticket_url, class: 'btn btn-primary' %>
  </li>
<% end %>

<% if @tickets.any? %>
  <table class="index" id="listing_orders" data-hook>
    <colgroup>
       <col style="width: 15%;">
       <col style="width: 25%;">
       <col style="width: 20%;">
       <col style="width: 10%;">
       <col style="width: 15%;">
       <col style="width: 10%;">
    </colgroup>
    <thead>
      <tr data-hook="admin_orders_index_headers">
        <th><%= link_to "Posted By", main_app.admin_withdrawals_path(sort: "user asc") %></th>
        <th><%= link_to "Subject", main_app.admin_withdrawals_path(sort: "title asc") %></th>
        <th><%= link_to "Description", main_app.admin_withdrawals_path(sort: "body asc") %></th>
        <th><%= link_to "Status", main_app.admin_withdrawals_path(sort: "status asc") %></th>
        <th data-hook="admin_orders_index_header_actions" class="actions"></th>
      </tr>
    </thead>
    <tbody>
    <% @tickets.each do |ticket| %>
      <tr data-hook="admin_orders_index_rows">
        <td><%= link_to ticket.user.email, edit_admin_user_path(ticket.user) %></td>
        <td><%= ticket.title %></td>
        <td><%= ticket.body %></td>
        <td><%= ticket.status %></td>
        <td class='actions align-center' data-hook="admin_orders_index_row_actions">
          <%= link_to_edit_url main_app.edit_admin_ticket_path(ticket), title: "admin_edit_#{dom_id(ticket)}", no_text: true %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<%= paginate @tickets, theme: "solidus_admin" %>
<% else %>
  <div class="no-objects-found">
    <% if can? :manage, Spree::Ticket %>
      <%= render 'spree/admin/shared/no_objects_found',
                   resource: Spree::Ticket,
                   new_resource_url: main_app.new_admin_ticket_path %>
    <% end %>
  </div>
<% end %>