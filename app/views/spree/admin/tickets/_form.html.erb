<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
<script>$(window).on('load', function () { $('.select2-basic').select2({ allowClear: true, placeholder: "Search for a user" }); })</script>
<div data-hook="admin_ticket_form_fields">

  <div class="row">

    <div class="left col-9" data-hook="admin_withdrawal_form_fields">
        <div data-hook="admin_withdrawal_form_user">
            <%= f.field_container :user do %>
                <%= f.label :user_id, 'Posted By' %>
                <%= f.select :user_id, Spree::User.all.map { |user| [user.email, user.id] }, {include_blank: true, required: true, include_hidden: true}, class: 'form-control select2-basic content-search' %>
            <% end %>
        </div>

        <div data-hook="admin_withdrawal_form_bank_number">
            <%= f.field_container :name do %>
                <%= f.label :name, class: 'required' %>
                <%= f.text_field :name, class: 'fullwidth title', required: true %>
                <%= f.error_message_on :name %>
            <% end %>
        </div>

        <div data-hook="admin_withdrawal_form_bank_number">
            <%= f.field_container :email do %>
                <%= f.label :email, class: 'required' %>
                <%= f.text_field :email, class: 'fullwidth title', required: true %>
                <%= f.error_message_on :email %>
            <% end %>
        </div>

        <div data-hook="admin_withdrawal_form_bank_number">
            <%= f.field_container :title do %>
                <%= f.label :title, class: 'required' %>
                <%= f.text_field :title, class: 'fullwidth title', required: true %>
                <%= f.error_message_on :title %>
            <% end %>
        </div>

        <div data-hook="admin_withdrawal_form_bank_number">
            <%= f.field_container :body do %>
                <%= f.label :body, class: 'required' %>
                <%= f.text_area :body, class: 'fullwidth title', rows: 4, required: true %>
                <%= f.error_message_on :body %>
            <% end %>
        </div>

        <div data-hook="admin_withdrawal_form_bank_name">
            <%= f.field_container :status do %>
                <%= f.label :status, class: 'required' %>
                <%= f.select :status, [ ['Open', 'open'], ['Closed', 'closed'] ], {include_blank: true, required: true, include_hidden: true}, class: 'form-control select2-basic content-search' %>
                <%= f.error_message_on :status %>
            <% end %>
        </div>
        
        <div data-hook="admin_withdrawal_form_bank_swift_code">
            <%= image_tag(@ticket.picture_url) if @ticket.picture? %>
            <%= f.field_container :picture do %>
                <%= f.label :picture, class: 'required' %>
                <%= f.file_field :picture, class: 'fullwidth title' %>
                <%= f.error_message_on :picture %>
            <% end %>
        </div>
    </div>

  </div>


  <div class="clear"></div>

  <div data-hook="admin_product_form_additional_fields"></div>

  <div class="clear"></div>
</div>